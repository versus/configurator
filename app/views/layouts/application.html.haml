!!!
%html
  %head
    %title Configurator
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    -if flash[:notice]
      %h5{:style => "color:green"}= flash[:notice]
    -if flash[:error]
      %h5{:style => "color:red"}= flash[:error]
    %img{:src => '/assets/logo.png', :width=> '350px'}
    .nav
      = tabs_tag do |tab| 
        = tab.dashboard   'Dashboard', root_path 
        = tab.sections     'Sections', sections_path 
        = tab.field_types  'Field Types', field_types_path
    
    .content
      = yield

